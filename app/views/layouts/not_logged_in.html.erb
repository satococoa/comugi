<!DOCTYPE html>
<html>
<head>
  <title>Comugi(top)</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice].present? %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert].present? %>
    <div class="alert alert-error">
      <%= flash[:alert] %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
